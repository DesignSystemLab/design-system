{
    "compilerOptions": {
        "jsx": "preserve",
        "target": "es6", // 컴파일 결과물의 문법 -> es6
        "lib": ["dom", "dom.iterable", "esnext"], // 사용 가능한 문법
        "allowJs": true, // .js, .jsx 확장자 허용
        "strictFunctionTypes": true, //함수 파라미터 체크 강하게
        "skipLibCheck": true, // d.ts 파일의 타입 검사 생략
        "esModuleInterop": true, //  es module이 아니어도 import export 쓸 수 있게 함
        "allowSyntheticDefaultImports": true, // default export가 없는 모듈의 default import 허용
        "strict": true, // 모든 strict가 붙은 설정 true
        "forceConsistentCasingInFileNames": true, //jsxImportSource 동일한 파일에 대해 일관되지 않은 참조 허용
        "noFallthroughCasesInSwitch": true, // switch문 break문 사용하지 않으면 경고
        "module": "es6", // 컴파일 결과물의 module 방식
        "moduleResolution": "node", // 모듈 해석 전략 -> node
        "resolveJsonModule": true, // JSON을 import할 수 있음
        "isolatedModules": true, // 모든 파일을 모듈로 만들어야 함 (import, export 하지 않으면 에러)
        "noEmit": true, // 결과물을 만들지 않음 -> 타입 체크용
        "noImplicitAny": true, // 암묵적 any 금지
        "sourceMap": true // 디버깅시 원본 TypeScript 코드를 보여줌
    },
    "exclude": ["**/dist/**, **/node_modules"]
}
